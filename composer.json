{
    "name": "lekoala/silverstripe-base",
    "description": "Extend base functionnality of SilverStripe",
    "type": "silverstripe-vendormodule",
    "keywords": [
        "silverstripe",
        "module",
        "cms"
    ],
    "license": "MIT",
    "authors": [{
        "name": "LeKoala",
        "email": "thomas@lekoala.be"
    }],
    "require": {
        "php": ">=7.1.0",
        "silverstripe/framework": "^4.1",
        "silverstripe/siteconfig": "^4.1",
        "axllent/silverstripe-minifier": "^1.0",
        "symbiote/silverstripe-gridfieldextensions": "^3.1",
        "bummzack/sortablefile": "^2.0",
        "silvershop/silverstripe-hasonefield": "^3.0",
        "wilr/silverstripe-googlesitemaps": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "squizlabs/php_codesniffer": "^3.0",
        "silverstripe/sqlite3": "^2.1",
        "symfony/var-dumper": "^4.2",
        "silverleague/ideannotator": "3.x-dev"
    },
    "suggest": {
        "predis/predis": "Use Redis as a cache",
        "colymba/gridfield-bulk-editing-tools": "Bulk editing",
        "unclecheese/display-logic": "Display and hide fields",
        "giggsey/libphonenumber-for-php": "Usage for PhoneField"
    },
    "extra": {
        "installer-name": "base",
        "expose": [
            "css",
            "javascript",
            "fonts"
        ]
    },
    "autoload": {
        "psr-4": {
            "LeKoala\\Base\\": "src/",
            "LeKoala\\Base\\Test\\": "tests/"
        }
    },
    "support": {
        "issues": "https://github.com/lekoala/silverstripe-base/issues"
    },
    "scripts": {
        "lint": "phpcs src/ tests/",
        "lint-clean": "phpcbf src/ tests/"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
